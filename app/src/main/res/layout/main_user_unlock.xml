<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <com.etongdai.module.base.view.CusButton
            android:id="@+id/userUnlockCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone"
            app:corner="5dp"
            app:normal_color="#e9e9e9"
            app:press_color="@color/alpha" />

        <com.etongdai.module.base.view.CusButton
            android:id="@+id/userUnlockJump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="跳过"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="visible"
            app:corner="5dp"
            app:normal_color="#e9e9e9"
            app:press_color="@color/alpha" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">

        <ImageView
            android:id="@+id/userUnlockIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/mine_logo" />

        <TextView
            android:id="@+id/userUnlockDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/userUnlockIcon"
            android:paddingLeft="5dp"
            android:textColor="#494C5C"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userUnlockWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/userUnlockDay"
            android:textColor="@color/font_normal"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/userUnlockMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/userUnlockDay"
            android:layout_below="@+id/userUnlockWeek"
            android:layout_toRightOf="@+id/userUnlockDay"
            android:textColor="@color/font_normal"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/userUnlockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userUnlockDay"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/userUnlockIcon"
            android:text="欢迎您,xxx"
            android:textColor="@color/font_normal"
            android:textSize="12sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/userUnLockViewTips"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:verticalSpacing="10dp" />

    <TextView
        android:id="@+id/userUnlockTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <com.etongdai.module.base.view.UnLockView
        android:id="@+id/userUnLockView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:line_width="6dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/userUnlockLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:background="@null"
            android:text="忘记手势密码"
            android:textColor="@color/font_normal"
            android:textSize="12sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/userUnlockOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@null"
            android:text="切换到其他账号"
            android:textColor="@color/font_normal"
            android:textSize="12sp"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>
